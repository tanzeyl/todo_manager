<main class="page-main">
      <article>
        <h1 class="title"> My To-do List</h1>
        <form class="AddTodo" action="/todos" method="POST">
          <input class="AddTodo-text" type="text" name="todo_text" placeholder="What's next?">
          <input class="AddTodo-date" name="due_date"type="date">
          <input class="AddTodo-button" type="submit" value="Add">
        </form>

        <%= render partial: "todos-section", locals: {
          section_title: "Overdue",
          todos: Todo.overdue.where(completed: false),
          show_date: true
          } %>
        <%= render partial: "todos-section", locals: {
          section_title: "Due Today",
          todos: Todo.due_today,
          show_date: false
          } %>
        <%= render partial: "todos-section", locals: {
          section_title: "Due Later",
          todos: Todo.due_later,
          show_date: true
          } %>
    </article>
</main>
